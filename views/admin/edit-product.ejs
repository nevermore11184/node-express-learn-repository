<html>
<%- include('../layouts/includes/head.ejs')%>
<%- include('../layouts/includes/navigation.ejs')%>
<body>
<main>
    <form class="product-form" action="/admin/edit-product?productId=<%=product.id%>" method="POST">
        <div class="form-control">
            <label for="title">Title</label>
            <input value="<%=product.title%>" type="text" name="title" id="title" />
        </div>
        <div class="form-control">
            <label for="imageUrl">Image url</label>
            <input value="<%=product.imageUrl%>" type="text" name="imageUrl" id="imageUrl" />
        </div>
        <div class="form-control">
            <label for="price">Price</label>
            <input value="<%=product.price%>" type="number" name="price" id="price" />
        </div>
        <div class="form-control">
            <label for="description">Description</label>
            <textarea type="text" name="description" id="description" rows="5">
                <%=product.description%>
            </textarea>
        </div>
        <button type="submit">Update product</button>
    </form>
</main>
</body>
</html>
