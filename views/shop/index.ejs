<html>
<%- include('../layouts/includes/head.ejs')%>
<%- include('../layouts/includes/navigation.ejs')%>
<body>
<main>
    <% if (prods.length > 0) { %>
    <%for (let product of prods) {%>
    <div>
        <article>
            <header>
                <h1><%=product.title%></h1>
            </header>
            <div>
                <img alt="ghost" src="<%= product.imageUrl %>" />
            </div>
            <div>
                <h2><%= product.price %></h2>
                <p><%= product.description %></p>
                <p><%= product._id %></p>
            </div>
            <div>
                <button>Add to cart</button>
            </div>
        </article>
    </div>
    <%}%>
    <%} else {%>
        <h1>No products, add something!</h1>
    <%}%>
</main>
</body>
</html>
