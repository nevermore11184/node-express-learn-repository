extends ../layouts/main-layout
block content
	main
		if prods.length > 0
			.grid
				each product in prods
					article.product-item
						header.card-header
							h1.product__title #{product.title}
						div.card__image
							img(src="https://lh3.googleusercontent.com/proxy/zLwAbtMhscJVrOV3jRayeG5atnUFmDjgy_l05fLQj_W6Nag2tImYnGpAxEJTB5H4J_f5RkXEPrpS-r587fL4E8BQEJj5qIXW3_LmEVef-4h7fE_jv54ymbi7nx6ifZei5V8sr2JKjzkdngFkJuBGF2Be6JKG5TU", alt="product")
							div.card-content
								h2.product__price $19.99
								p.product__description Description
							.card__actions
								button.btn Add to a cart
		else
			h1 No products
